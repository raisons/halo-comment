{
  "name": "sonic-comment",
  "version": "1.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raisons/sonic-comment.git"
  },
  "author": "Raison",
  "bugs": {
    "url": "https://github.com/raisons/sonic-comment/issues"
  },
  "homepage": "https://github.com/raisons/sonic-comment",
  "scripts": {
    "serve": "vite",
    "dev": "vite build --watch --mode development",
    "build": "run-p type-check build-only",
    "preview": "vite preview --port 4173",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prettier": "prettier --write './src/**/*.{vue,js,jsx,ts,tsx,css,scss,json,yml,yaml,html}'",
    "gen-types": "tsc -d --emitDeclarationOnly && vue-typegen gen -s src -o dist",
    "release": "release-it"
  },
  "dependencies": {
    "@halo-dev/components": "^1.5.0",
    "@halo-dev/rest-api-client": "^1.1.0",
    "@vueuse/components": "^10.3.0",
    "@vueuse/core": "^10.3.0",
    "autosize": "^6.0.1",
    "axios": "^0.27.2",
    "dayjs": "^1.11.10",
    "emoji-mart-vue-fast": "^12.0.5",
    "javascript-time-ago": "^2.5.9",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.1.52",
    "@rushstack/eslint-patch": "^1.3.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tsconfig/node18": "^18.2.2",
    "@types/autosize": "^4.0.1",
    "@types/jsdom": "^20.0.1",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/node": "^18.16.16",
    "@types/qs": "^6.9.7",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.42.0",
    "eslint-plugin-vue": "^9.14.1",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "release-it": "^15.11.0",
    "rollup-plugin-copy-merge": "^1.0.2",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.3",
    "tailwindcss-themer": "^2.0.3",
    "typescript": "~5.2.0",
    "unplugin-icons": "^0.14.15",
    "vite": "^4.3.9",
    "vitest": "^0.28.5",
    "vue-tsc": "^1.8.13"
  }
}
